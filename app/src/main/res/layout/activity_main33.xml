<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main33Activity"
    android:background="@drawable/background">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold">

        <RadioButton
            android:id="@+id/bu1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text="from collision of two planets"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/bu2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text="gas and dust of stars"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/bu3"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text="left over part of planets "
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/bu4"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text="break part of stars"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="112dp"
        android:text="Exoplanets are formed by "
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="31dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>