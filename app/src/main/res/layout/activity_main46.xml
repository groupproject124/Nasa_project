<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main46Activity">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/bu1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text=" 4 times the power of sun in his life time " />

        <RadioButton
            android:id="@+id/bu2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text=" 2.5 times the power of sun in his life time " />

        <RadioButton
            android:id="@+id/bu3"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text=" three the power of sun in his life time" />

        <RadioButton
            android:id="@+id/bu4"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:onClick="skip"
            android:text=" twice the power of sun in his life time " />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="112dp"
        android:text="how much energy does a burst can have "
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="31dp" />
</androidx.constraintlayout.widget.ConstraintLayout>